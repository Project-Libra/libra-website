{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist"
  },
  "include": [
    "src",
    ".eslintrc.js",
    "webpack.config.js"
  ]
}